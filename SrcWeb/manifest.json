{
  "manifest_version": 3,
  "name": "TTTM",
  "version": "1.0.1",
  "description": "Floating actions on text selection (define / report / voice).",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
  "resources": ["capture.html", "capture.js"],
  "matches": ["<all_urls>"]
}]
}