{
  "manifest_version": 3,
  "name": "TTTM",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "tabs", "audioCapture", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
  "resources": ["capture.html", "capture.js"],
  "matches": ["<all_urls>"],
  "host_permissions": [
    "http://localhost:5000/*"
  ]
}]
}
